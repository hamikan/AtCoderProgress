// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

model User {
  id                        String      @id @default(cuid())
  name                      String?
  email                     String?     @unique
  emailVerified             DateTime?   @map("email_verified")
  image                     String?
  atcoderId                 String?     @unique @map("atcoder_id")
  submissionsLastFetchedAt  DateTime?   @map("submissions_last_fetched_at")

  accounts                  Account[]
  sessions                  Session[]
  submissions               Submission[]
  solutions                 Solution[]
  userTags                  UserTag[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Submission {
  id             Int      @id
  epochSecond    Int      @map("epoch_second")
  problemId      String   @map("problem_id")
  contestId      String   @map("contest_id")
  userId         String   @map("user_id")
  language       String
  point          Float
  length         Int
  result         String
  executionTime  Int?     @map("execution_time")

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem        Problem  @relation(fields: [problemId], references: [id], onDelete: Restrict)

  @@map("submissions")
}

model Contest {
  id                String  @id
  startEpochSecond  Int     @map("start_epoch_second")
  durationSecond    BigInt  @map("duration_second")
  
  problems          ContestProblem[]
  
  @@map("contests")
}

model Problem {
  id                  String       @id
  name                String
  difficulty          Int?
  totalSolutionCount  Int          @default(0) @map("total_solution_count")
  firstContestId      String       @default("unknown") @map("first_contest_id")
  
  contests            ContestProblem[]
  submissions         Submission[]
  solutions           Solution[]
  problemTags         ProblemTag[]

  @@map("problems")
}

model ContestProblem {
  contestId     String  @map("contest_id")
  problemId     String  @map("problem_id")
  problemIndex  String  @map("problem_index")

  contest       Contest @relation(fields: [contestId], references: [id])
  problem       Problem @relation(fields: [problemId], references: [id])

  @@id([contestId, problemId])
  @@map("contest_problems")
}

enum SolutionStatus {
  SELF_AC
  EXPLANATION_AC
  REVIEW_AC
  AC
  TRYING
  UNSOLVED
}

model Solution {
  id        String          @id @default(cuid())
  userId    String?         @map("user_id")
  problemId String          @map("problem_id")
  content   String?         @db.Text
  status    SolutionStatus  @default(UNSOLVED)
  solvedAt  DateTime?       @map("solved_at")
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")

  userTags  SolutionUserTag[]

  user      User?           @relation(fields: [userId], references: [id], onDelete: SetNull)
  problem   Problem         @relation(fields: [problemId], references: [id], onDelete: Restrict)
  
  @@index([userId])
  @@index([problemId])
  @@map("solutions")
}

model Tag {
  id            String          @id @default(nanoid())
  name          String          @unique
  createdAt     DateTime        @default(now()) @map("created_at")
  
  userTags      UserTag[]
  problemTags   ProblemTag[]

  @@map("tags")
}

model UserTag {
  id            String         @id @default(nanoid())
  createdById   String         @map("created_by_id")
  tagId         String?        @map("tag_id")
  name          String
  createdAt     DateTime       @default(now()) @map("created_at")

  creator       User           @relation(fields: [createdById], references: [id], onDelete: Cascade)
  parentTag     Tag?           @relation(fields: [tagId], references: [id], onDelete: SetNull)
  solutions     SolutionUserTag[]

  @@unique([createdById, name])
  @@map("user_tags")
}

model SolutionUserTag {
  solutionId String @map("solution_id")
  userTagId  String @map("user_tag_id")
  
  solution   Solution @relation(fields: [solutionId], references: [id], onDelete: Cascade)
  userTag    UserTag  @relation(fields: [userTagId], references: [id], onDelete: Cascade)

  @@id([solutionId, userTagId])
  @@map("solution_user_tags")
}

model ProblemTag {
  problemId String   @map("problem_id")
  tagId     String   @map("tag_id")
  count     Int      @default(0)
  
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([problemId, tagId])
  @@map("problem_tags")
}